{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["plugin:jest/recommended", "airbnb/base"],
  "plugins": ["jest"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prefer-promise-reject-errors": "off",
    "implicit-arrow-linebreak": "off"
  }
}
